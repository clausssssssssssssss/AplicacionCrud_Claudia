<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_Login">

    <TextView
        android:id="@+id/textView"
        android:layout_width="196dp"
        android:layout_height="43dp"
        android:text="Iniciar Sesion"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <EditText
        android:id="@+id/txtContrasenaLO"
        android:layout_width="320dp"
        android:layout_height="58dp"
        android:ems="10"
        android:hint="Ingrese su Contraseña"
        android:inputType="text"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="316dp" />

    <EditText
        android:id="@+id/txtCorreoLO"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:ems="10"
        android:hint="Ingrese su Correo Electronico"
        android:inputType="text"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="208dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Correo Electronico"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="174dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Contraseña"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="283dp" />

    <Button
        android:id="@+id/btnIngresarLO"
        android:layout_width="139dp"
        android:layout_height="60dp"
        android:backgroundTint="#8F2C2C"
        android:text="Ingresar"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="407dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:text="¿No tienes cuenta?"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="541dp" />

    <Button
        android:id="@+id/btnRegistrate"
        android:layout_width="139dp"
        android:layout_height="59dp"
        android:backgroundTint="#852A2A"
        android:text="Registrate"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="587dp" />

</androidx.constraintlayout.widget.ConstraintLayout>